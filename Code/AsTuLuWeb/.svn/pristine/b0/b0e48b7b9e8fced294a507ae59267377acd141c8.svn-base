@model List<AsTuLuWebProject.Database.Book>

<div class="bookView">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="bookUnit">
            @Html.ActionLink(" ", "BookDetails", "Book", new { @bookID = Model[i].BookID}, new { @class = "linkspan"})
            <div class="bookTitle" data-id="@Model[i].BookID">
                @Html.DisplayFor(item => item[i].BookName) 
            </div>    
            <div class="bookDetail">
                <div class="bookCategory">
                    @*@Html.DisplayFor(item =>item[i].Category.CategoryName)*@
                </div>
                <div class="bookEditor">
                    @*@Html.DisplayFor(item => item[i].Editor.EditorName)*@
                </div>
                <div class="bookDate">
                    @Model[i].DateAdded.ToShortDateString()
                </div>
            </div>
            <div class="bookScore">
                <div>
                    Score: @Html.DisplayFor(item => item[i].Score)    
                </div>
                <div>
                    Consulté: @Html.DisplayFor(item => item[i].TimesConsulted) fois    
                </div>
            </div>
            <div class="clear"></div>
        </div>
    }
</div>