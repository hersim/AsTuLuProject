@model List<AsTuLuWebProject.Models.ViewModels.BookDisplay>
<script type="text/javascript">
    $(document).ready(function() {
        $('#moreBooks').click(function() {
            $.get("@Url.Action("ListBooks")", {
                    
                }, function(data) {
                    $('#bookBody').append(data);
                });
        });

        $('#filtrer').click(function() {
            var value = $('#firstSelected').val();

            var secondValue = $('#secondSelected').val();

            var thirdValue = $('#thirdSelected').val();
            
            $.ajax({
                type: "GET",
                url: '@Url.Action("ListBooks")',
                data: { firstSelection: value, secondSelection: secondValue, thirdSelection: thirdValue },
                success: function (data) {
                    $('#bookBody').html(data);
                }
            });
        });

    });
 </script>
@{
    ViewBag.Title = "Au hasard!";
}

@using (Html.BeginForm())
{
    <div id="bookBody">
        @{
            Html.RenderPartial("ResultTable", Model);
        }
    </div>
    <div class="clear">
        <a href="javascript:void(0);" id="moreBooks" style="text-align: center; margin-left: auto; vertical-align: middle; ">Plus!</a>        
        <a href="#bookBody" style="text-align: center; margin-left: auto; vertical-align: middle; ">Haut</a>
    </div> 
}
